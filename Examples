import { StateService } from './state.service';

describe('StateService', () => {
  let service: StateService;

  beforeEach(() => {
    service = new StateService();
  });

  it('should initialize programId as null', () => {
    expect(service.getProgramId()()).toBeNull();
  });

  it('should set and retrieve programId', () => {
    const testId = 12345;
    service.setProgramId(testId);
    expect(service.getProgramId()()).toBe(testId);
  });

  it('should update programId when setProgramId is called again', () => {
    const firstId = 12345;
    const secondId = 67890;

    service.setProgramId(firstId);
    expect(service.getProgramId()()).toBe(firstId);

    service.setProgramId(secondId);
    expect(service.getProgramId()()).toBe(secondId);
  });
});
